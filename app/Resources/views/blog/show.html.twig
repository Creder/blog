{% extends 'base.html.twig' %}

{% block body -%}
    <h1>{{ blog.title }}</h1>
    <h4 class="blog-post-meta">created by: {{ blog.author }}</h4>
    <p class="blog-post-meta">{{ blog.created|date('Y-m-d') }}</p>

    <p>{{ blog.blog }}</p>

    <p>Created: {% if blog.created %}{{ blog.created|date('Y-m-d H:i:s') }}{% endif %} </p>
    <p>Updated: {% if blog.updated %}{{ blog.updated|date('Y-m-d H:i:s') }}{% endif %} </p>
    <ul>
        <li>
            <a href="{{ path('index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
